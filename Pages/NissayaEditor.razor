    private void PrepareDocSelectDialog(string s)
    {
        DocGridList = new List<DocType>();
        //if (allDocList == null || allDocList.Count == 0) allDocList = dataFile.GetAllSuttaList();
        VisibleSpinner = true;
        if (s == "All") 
        {
            allDocList = dataFile.GetAllSuttaList();
            foreach (KeyValuePair<string, string> kv in allDocList)
            {
                DocType d = new DocType() { Id = kv.Key, Text = kv.Value };
                DocGridList.Add(d);
            }
        }
        else 
        {
            List<string> listDoc = dataFile.GetPDFDocList(s);
            if (listDoc.Count > 0)
            {
                foreach(String item in listDoc)
                {
                    string[] f = item.Split('|');
                    if (f.Length == 2)
                    {
                        DocType d = new DocType() { Id = f[0], Text = f[1] };
                        DocGridList.Add(d);                
                    }
                }
            }
            else
                AlertBtn("No documents found for this source book.", "Not Found");
        }
