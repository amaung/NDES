    private void ShowInvalidNISDial(Dictionary<string, List<NIS>> dict)
    {
        if (dict == null || dict.Count == 0) return;
        InvalidNISDisplayRecords = new List<InvalidNISDisplay>();
        int n = 0;
        foreach(string pgno in dict.Keys)
        {
            string[] f = pgno.Split("-");
            int iPgNo = f.Length >= 1 ? Int32.Parse(f[0]) : 0;
            int recNo = f.Length >= 2 ? Int32.Parse(f[1]) : 0;
            foreach(NIS nis in dict[pgno])
            {
                InvalidNISDisplayRecords.Add(new InvalidNISDisplay()
                {
                    srNo = ++n,
                    pgNo = iPgNo,
                    nisRecNo = recNo,
                    nisRec = String.Format("*{0} | ^{1} | @{2} | ?{3}", nis.Pali, nis.Trans, nis.Footnote, nis.Remarks)
                });
            }
        }
        IsVisible_InvalidNIS = true;
    }
